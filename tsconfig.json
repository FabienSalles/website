{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@linkedin/api/*": ["src/linkedin/api/*"],
      "@linkedin": ["src/linkedin/index"],
    },
    "types": ["vitest", "vitest/globals", "jest"]
  },
  "exclude": ["dist"]
}
