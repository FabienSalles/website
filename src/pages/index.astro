---
import Layout from '../layouts/Layout.astro';

const stats = [
  { number: "14+", label: "années d'expérience" },
  { number: "26+", label: "projets clients" },
  { number: "20+", label: "formations dispensées" },
  { number: "98+", label: "personnes formées" }
];

const technologies = [
  "TDD",
  "DDD",
  "Hexagonal Architecture",
  "Event Driven Architecture",
  "Craftsmanship",
  "Clean Code",
  "CQRS",
  "Agile",
  "PHP",
  "Symfony",
  "JavaScript",
  "TypeScript",
  "Node.js",
  "Git",
  "PHPUnit",
  "Akeneo",
  "Keycloak",
  "Api Platform",
  "Sylius",
  "ElasticSearch",
  "OpenSearch",
  "RabbitMQ",
  "MySql",
  "MariaDB",
  "MongoDB",
  "SQS",
  "Docker",
  "Ansible",
  "Cypress",
  "React",
  "Functional Programming",
  "AWS",
  "GCP"
];

const services = [
  {
    title: "Tech Lead / Coach Technique",
    description: "Je peux contribuer à rassembler des pratiques de développement, faciliter la montée en compétence et venir en support de vos équipes en trouvant des solutions adaptées à vos problématiques et en contribuant au développement de vos produits"
  },
  {
    title: "Formation",
    description: "J'ai accompagné des personnes en reconversion et donner des formations pour différents organismes. Je me suis recentré sur 2 formations (Git et PHPUnit) mais je peux répondre à d'autres demandes si celles-ci rejoignent mes domaines d'expertises"
  },
  {
    title: "Développement",
    description: "Que cela soit pour un besoin ponctuel ou pour un projet complet, sur du legacy ou une refonte, j'attache beaucoup d'importance à trouver des solutions adaptés à vos problématiques et à répondre aux mieux à vos besoins"
  }
];

const testimonials = [
  {
    name: "Marie Laurent",
    role: "CTO, TechCorp",
    content: "L'accompagnement de Fabien a transformé nos pratiques de développement. Notre équipe est plus efficace et notre code plus maintenable.",
    image: "https://i.pravatar.cc/150?img=1"
  },
  {
    name: "Thomas Dubois",
    role: "Lead Developer, StartupFlow",
    content: "La formation Clean Code a été un véritable tournant pour notre équipe. Fabien sait transmettre sa passion et son expertise.",
    image: "https://i.pravatar.cc/150?img=2"
  }
];

const clients = [
  { name: "TechCorp", logo: "https://via.placeholder.com/150x50/e2e8f0/64748b?text=TechCorp" },
  { name: "StartupFlow", logo: "https://via.placeholder.com/150x50/e2e8f0/64748b?text=StartupFlow" },
  { name: "InnovTech", logo: "https://via.placeholder.com/150x50/e2e8f0/64748b?text=InnovTech" },
  { name: "DevPro", logo: "https://via.placeholder.com/150x50/e2e8f0/64748b?text=DevPro" }
];
---

<Layout title="Fabien Salles - Expert en artisanat logiciel | Tech Lead & Formateur">
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center bg-gray-50">
    <div class="container mx-auto px-4 py-20">
      <div class="float-right">
          <img class="h-96" src="/fabiensalles.png" alt="Fabien Salles">
      </div>
      <div class="max-w-3xl clear-left">
          <h1 class="text-4xl md:text-5xl font-semibold mb-6">
              Salut, je suis Fabien !
          </h1>
          <p class="text-xl text-gray-700 mb-8">
              Vous souhaitez optimiser votre delivery, limiter les régressions et avoir des applications qui tiennent dans le temps ? Je peux certainement vous aider.
          </p>
          <div>
              {technologies.map(technology =>
                <span class="bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-gray-300">{technology}</span>
              )}
          </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Je me positionne en tant que</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {services.map(service => (
          <div class="p-6 border rounded-lg hover:shadow-lg transition-all duration-300">
            <h3 class="text-xl font-semibold mb-4">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Clients Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Ils me font confiance</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {clients.map(client => (
          <div class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:shadow-lg transition-all duration-300">
            <img 
              src={client.logo} 
              alt={client.name}
              class="max-w-full h-auto"
            />
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- Stats Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map(stat => (
          <div class="text-center p-6 bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-4xl font-bold text-blue-600 mb-2">{stat.number}</div>
            <div class="text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Témoignages</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="flex items-center gap-4 mb-4">
              <img
                src={testimonial.image}
                alt={testimonial.name}
                class="w-12 h-12 rounded-full"
              />
              <div>
                <div class="font-semibold">{testimonial.name}</div>
                <div class="text-gray-600 text-sm">{testimonial.role}</div>
              </div>
            </div>
            <p class="text-gray-700">{testimonial.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .btn {
    @apply inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-all duration-300 transform;
  }

  .btn-primary {
    @apply bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg hover:shadow-xl hover:-translate-y-0.5;
  }

  .btn-outline {
    @apply border-2 border-blue-600 text-blue-600 hover:bg-blue-50;
  }
</style>