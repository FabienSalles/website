---
import Layout from '../layouts/Layout.astro';

const title = "Mes clients - Fabien Salles";
const description = "Les entreprises avec qui j'ai travaill√©";
const clients = [
  {name: "Hermes", logo: "/clients/hermes.png"},
  {name: "Eres", logo: "/clients/eres.png"},
  {name: "Amundi", logo: "/clients/amundi.png"},
  {name: "Pledg", logo: "/clients/pledg.png"},
  {name: "plum-kitchen", logo: "clients/plum-kitchen.png"},
  {name: "Clever-Age", logo: "/clients/clever-age.png"},
  {name: "Japan-experience", logo: "/clients/japan-experience.png"},
  {name: "Orsys", logo: "/clients/orsys.png"},
  {name: "LVMH", logo: "/clients/lvmh.png"},
  {name: "Jardiland", logo: "/clients/jardiland.png"},
  {name: "Chaumet", logo: "/clients/chaumet.png"},
  {name: "MB Expansion", logo: "/clients/mb-expansion.png"},
  {name: "DFS", logo: "/clients/dfs.png"},
  {name: "Dismo", logo: "/clients/dismo.jpg"},
  {name: "Jacadi", logo: "/clients/jacadi.jpg"},
  {name: "Dior", logo: "/clients/dior.png"},
  {name: "Aramis Auto", logo: "/clients/aramis-auto.png"},
  {name: "Wolkswagen", logo: "/clients/wolkswagen.png"},
  {name: "Total", logo: "/clients/total.png"},
  {name: "RATP", logo: "/clients/ratp.png"},
  {name: "We-cook", logo: "/clients/wecook.png"},
  {name: "meteo-consult", logo: "/clients/meteo-consult.png"}
];
---
<Layout title={title} description={description}>
  <section class="pt-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">{description}</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {clients.map(client => (
          <div class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:shadow-lg transition-all duration-300">
            <img
              src={client.logo}
              alt={client.name}
              class="max-w-full h-auto"
            />
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>